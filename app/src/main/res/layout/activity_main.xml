<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iNAV Tracker"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Scrip"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerETF"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="80dp"
        android:background="@android:drawable/edit_text"
        android:prompt="@string/spinner_prompt"
        android:minHeight="120dp"
        android:padding="12dp" />
    <EditText
        android:id="@+id/etCustomSymbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter symbol name"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:visibility="gone"
        android:inputType="textCapCharacters"
        android:imeOptions="actionDone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current iNAV"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvINAV"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:padding="16dp" />

    <EditText
        android:id="@+id/etFrequency"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/edit_text"
        android:hint="Frequency (seconds)"
        android:inputType="number"
        android:textAlignment="center"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tracking"
        android:textStyle="bold"/>
</LinearLayout></ScrollView>